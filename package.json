{
  "name": "playwright-typescript-demo",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.54.1",
    "@types/node": "^24.9.2",
    "husky": "^9.1.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "test": "npx playwright test",
    "test:ui": "npx playwright test --ui",
    "test:smoke": "npx playwright test --grep @smoke",
    "test:regression": "npx playwright test --grep @regression",
    "open-report": "npx playwright show-report",
    "codegen": "npx playwright codegen",
    "trace": "npx playwright show-trace trace.zip",
    "mcp:analyze": "ts-node --compiler-options '{\"module\":\"CommonJS\"}' helpers/mcp-helper.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "pre-commit": "yarn lint && yarn typecheck",
    "pre_push": "yarn test && yarn mcp:analyze"
  },
  "dependencies": {
    "@types/dotenv": "^6.1.1",
    "dotenv": "^17.2.3",
    "openai": "^6.7.0"
  }
}
